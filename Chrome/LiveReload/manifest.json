{
  "manifest_version": 2,
  "name": "LiveReload with SeeSS Logger",
  "version": "2.0.9",
  "background": {
    "scripts": [
      "q.js",
      "global.js",
      "global-chrome.js",
      "google-api.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["injected.js"]
    }
  ],
  "web_accessible_resources": [
    "livereload.js"
  ],
  "permissions": [
    "tabs",
    "pageCapture",
    "debugger",
    "<all_urls>",
    "notifications"
  ],
  "icons": { "48": "icon48.png",
            "128": "icon128.png" },
  "browser_action": {
    "default_title": "Enable LiveReload",
    "default_icon": "IconDisabled.png"
  },
  "update_url": "http://download.livereload.com/LiveReload-Chrome-update.xml",

  /* http://stackoverflow.com/questions/18681803/loading-google-api-javascript-client-library-into-chrome-extension */
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://apis.google.com; object-src 'self'"
}
